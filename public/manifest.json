{
  "manifest_version": 3,
  "name": "Blocky Writer",
  "version": "0.1.0",
  "description": "Fill block-based PDF forms with ReScript UI and Rust/WASM core.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.gov.uk/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.gov.uk/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
