{
  "name": "blocky-writer",
  "version": "0.1.0",
  "private": true,
  "description": "Firefox extension for block-based PDF form filling using ReScript + Rust/WASM",
  "scripts": {
    "build:res": "rescript build",
    "watch:res": "rescript build -w",
    "build:wasm": "./scripts/build-wasm.sh",
    "build:js": "webpack --mode=production",
    "build": "npm run build:res && npm run build:js",
    "dev": "npm run build:res && webpack --mode=development && web-ext run --source-dir dist",
    "lint": "rescript build"
  },
  "dependencies": {
    "@rescript/react": "^0.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rescript-webapi": "^0.9.1"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^12.0.2",
    "rescript": "^11.1.4",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "web-ext": "^8.5.0"
  },
  "engines": {
    "node": ">=20"
  }
}
